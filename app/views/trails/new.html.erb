<h1>Create a Trail</h1>

<%= form_for @trail do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %><br>
  <%= f.label :distance %>
  <%= f.number_field :distance %>
  <%= f.label :difficulty_level %>
  <%= f.select :difficulty_level, (1..10) %><br>
  <%= f.label :description %>
  <%= f.text_area :description %>
  <%= f.submit %>
<% end %>

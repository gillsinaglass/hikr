<%= form_for @shelter do |f| %>
    <% if @shelter.errors.any? %>
<ul>
   <% @shelter.errors.full_messages.each do |m| %>
  <li><%= m %></li>
    <% end %>
</ul>
  <% end %>

  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.label :location %>
  <%= f.text_field :location %>
  <%= f.collection_select(:trail_id, Trail.all, :id, :name, prompt: "Trail Name") %>
  <%= f.label :description %>
  <%= f.text_area :description %>
  <%= f.submit %>
<% end %>

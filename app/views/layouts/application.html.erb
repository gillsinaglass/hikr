<!DOCTYPE html>
<html>
  <head>
    <title>Hikr</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <div class="header">
    <% if session[:user_id] %>
      <%= link_to "Log out #{current_user.username.capitalize}", logout_path, method: "DELETE" %>
    <% else %>
      <%= link_to "Log in", login_path %>
    <%end %>
  </div>
    <%= yield %>
  </body>
</html>

<%= form_for @break do |f| %>
    <% if @break.errors.any? %>
<ul>
   <% @break.errors.full_messages.each do |m| %>
  <li><%= m %></li>
    <% end %>
</ul>
  <% end %>

  <%= f.label :review, "Review Your Break!" %><br><br>
  <%= f.text_area :review %><br>
  <%= f.label :rating, "Rate Your Break!" %>
  <%= f.select :rating, (1..10), :include_blank => "Please Rate" %>
  <%= f.submit "Leave Review" %>
<% end %>

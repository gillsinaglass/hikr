<h2>Username: <%= @user.username %></h2><br>
<h2>Gear: <%= @user.gear %></h2><br>
<!-- <h2>Photo: <%= @user.photo %></h2><br> -->
<% if @user.photo.attached? %>
<h2>Profile Pic:</h2>
  <%= image_tag @user.photo %>
<% end %>

<h2>Caption: <%= @user.caption %></h2><br><br>

<%= link_to "Update Your Profile", edit_user_path(@user) %><br><br>

<%= form_tag @user, method: "DELETE" do %>
  <%= submit_tag "Suspend Account" %>
<% end %>
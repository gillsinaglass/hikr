<br>
<h1>View all Hikers!</h1>
<br>

<ul class="list-group">
  <% @users.each do |user| %>

   <li class="list-group-item">     

      <%= link_to user.username, user %><br><br>
      <% if user.photo.attached? %>
        <%= image_tag user.photo, class: "img"%>
        <% end %>
      <br><br><%= user.caption %></li><br>

      
  <% end %>
  </ul>

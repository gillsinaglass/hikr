<h2>Edit User</h2>

<%= form_for @user do |f| %>
    <% if @user.errors.any? %>
<ul>
   <% @user.errors.full_messages.each do |m| %>
  <li><%= m %></li>
    <% end %>
</ul>
  <% end %>

  <%= f.label :gear %>
  <%= f.text_field :gear %>
  <%= f.label :photo, "Profile Pic" %>
  <%= f.file_field :photo, multiple: false %>
  <%= f.label :caption %>
  <%= f.text_area :caption %>
  <%= f.submit %>
<% end %>

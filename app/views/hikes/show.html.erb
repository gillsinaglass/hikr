<h1>Hike</h1>

<h3>Hiker Username: </h3><%= link_to @hike.user.username, @hike.user%>
<h3>Trail Name: </h3><%= link_to @hike.trail.name, @hike.trail %>
<h3>Hike Rating: </h3><%= @hike.rating %>
<h3>Hike Started At: </h3><%= @hike.start_time %>
<h3>Hike Ended At: </h3><%= @hike.status %>
<h3>Total Hike Time: </h3><%= @hike.length_of_hike %><br><br>
<h3>Trail Length: </h3><%= @hike.get_trail_length %>

<h3>Shelters on <%= @hike.trail.name %>:</h3>
<ul>
  <% @hike.trail.shelters.each do |shelter| %>
  <li><%= link_to shelter.name, shelter %></li>
  <% end %>
</ul>


<% if @hike.status == "Pending" %>
<%= link_to "End Hike", edit_hike_path %>
<% else %>
<%= link_to "Return Home", current_user %>
<% end %>
